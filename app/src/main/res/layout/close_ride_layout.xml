<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/white"
    android:orientation="vertical">
    <EditText
        android:id="@+id/edtFareAmount"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/rect_bg_lightgrey"
        android:fontFamily="@font/ciculrstd"
        android:gravity="center|left"
        android:hint="Enter Fare Amount"
        android:inputType="number"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="13sp">
    </EditText>

    <EditText
        android:id="@+id/txtReceivepayment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/rect_bg_lightgrey"
        android:fontFamily="@font/ciculrstd"
        android:gravity="center|left"
        android:inputType="number"
        android:hint="Upload receive payment"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="13sp">
    </EditText>

    <TextView
        android:id="@+id/txtReceiptPayment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/rect_bg_lightgrey"
        android:fontFamily="@font/ciculrstd"
        android:gravity="center|left"
        android:hint="Upload Receipt Document"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="13sp">
    </TextView>


    <Button
        android:id="@+id/btnDoneRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/start_ride_shape"
        android:fontFamily="@font/ciculrstd"
        android:text="Done"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white">
    </Button>


</LinearLayout>