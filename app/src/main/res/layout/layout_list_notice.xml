<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_weight="2"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp">


        <LinearLayout
            android:id="@+id/ll_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/nImage"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_caarr"></ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nProdName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="16sp"
                            android:fontFamily="@font/ciculrstd"

                            android:textColor="@color/colorPrimary"
                            android:gravity="center|left"
                            android:padding="5dp"></TextView>
                            <TextView
                                android:id="@+id/nPInfoLess"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textSize="13sp"
                                android:fontFamily="@font/ciculrstd"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/colorPrimary"
                                android:gravity="center|left"></TextView>
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/nPInfoMore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Description "
                                android:textSize="14sp"
                                android:paddingTop="2dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp"
                                android:textColor="@color/grey"
                                android:gravity="center|left"></TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:background="@color/white"
                            android:layout_marginTop="3dp"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/nTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:layout_alignParentRight="true"
                                android:padding="2dp"
                                android:fontFamily="@font/ciculrstd"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13sp"
                                android:gravity="center" />

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/nMore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:layout_alignParentRight="true"
                                android:padding="2dp"
                                android:text="more.."
                                android:textColor="@color/colorPrimary"
                                android:textSize="13sp"
                                android:gravity="center|end"
                                android:layout_marginRight="10dp"/>

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/nless"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:layout_alignParentRight="true"
                                android:padding="2dp"
                                android:text="less.."
                                android:textColor="@color/colorPrimary"
                                android:textSize="13sp"
                                android:gravity="center|end"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
