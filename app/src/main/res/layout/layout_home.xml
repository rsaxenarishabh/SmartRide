<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/slider1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ic_sort_button_with_three_lines"
                android:backgroundTint="@color/colorPrimaryDark"></ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/ciculrstd"
                android:gravity="left|center"
                android:padding="5dp"
                android:text="Smart Rider24"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/findLoads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rect_bg_lightgrey"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_loupe"
                        android:backgroundTint="@color/colorPrimaryDark"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:fontFamily="@font/ciculrstd"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Search here"
                        android:textColor="@color/hintColor"
                        android:textSize="13sp"></TextView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/rNotic"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|end"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_notification"
                    android:backgroundTint="@color/colorPrimaryDark"></ImageView>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/lightGrey"></View>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/ciculrstd"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Always there when you need a taxi to"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="gone"></TextView>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/ciculrstd"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="@string/txt"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ciculrstd"
                            android:gravity="center|left"
                            android:padding="5dp"
                            android:text="Make Your Trip"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            android:textStyle="bold"></TextView>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height=".7dp"
                            android:layout_marginTop="-5dp"
                            android:background="@color/colorPrimaryDark">

                        </View>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ciculrstd"
                        android:gravity="center|left"
                        android:padding="5dp"
                        android:text="Choose your Vehicle"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13sp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_bg_lightgrey"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25sp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ic_carr"
                            android:backgroundTint="@color/colorPrimaryDark"></ImageView>

                        <Spinner
                            android:id="@+id/spinnerVehicle"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                        </Spinner>

                        <TextView
                            android:id="@+id/txtselectCar"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:drawableRight="@drawable/ic_drop_down_arrow"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:fontFamily="@font/ciculrstd"
                            android:gravity="center|left"
                            android:hint="Select your Vehicle"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hintColor"
                            android:textSize="14sp"
                            android:visibility="gone"></TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ciculrstd"
                        android:gravity="center|left"
                        android:padding="5dp"
                        android:text="Pick-up Location"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13sp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_bg_lightgrey"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ic_car"
                            android:backgroundTint="@color/colorPrimaryDark"></ImageView>

                        <TextView
                            android:id="@+id/txtPickUp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginRight="5dp"
                            android:drawableRight="@drawable/ic_drop_down_arrow"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:fontFamily="@font/ciculrstd"
                            android:gravity="center|left"
                            android:hint="Select your Pick-up Location"
                            android:padding="5dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="13sp"></TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ciculrstd"
                        android:gravity="center|left"
                        android:padding="5dp"
                        android:text="Drop-off Location"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13sp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_bg_lightgrey"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ic_car"
                            android:backgroundTint="@color/colorPrimaryDark"></ImageView>

                        <TextView
                            android:id="@+id/txtDropoff"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginRight="5dp"
                            android:drawableRight="@drawable/ic_drop_down_arrow"
                            android:drawableTint="@color/colorPrimaryDark"
                            android:fontFamily="@font/ciculrstd"
                            android:gravity="center|left"
                            android:hint="Select your Drop-off Location"
                            android:padding="5dp"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="13sp"></TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ciculrstd"
                        android:gravity="center|left"
                        android:padding="5dp"
                        android:text="Optional Pickup Location"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13sp"></TextView>

                    <EditText
                        android:id="@+id/edtOptionalPickupLocation"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rect_bg_lightgrey"
                        android:hint="  Enter Optional Pickup Location"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="13sp"></EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ciculrstd"
                        android:gravity="center|left"
                        android:padding="5dp"
                        android:text="Optional Drop-off Location"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13sp"></TextView>

                    <EditText
                        android:id="@+id/edtOptionalDropLocation"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rect_bg_lightgrey"
                        android:hint="  Enter Optional Drop Location"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="13sp"></EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ciculrstd"
                        android:gravity="center|left"
                        android:padding="5dp"
                        android:text="Optional Mobile No"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13sp"></TextView>

                    <EditText
                        android:id="@+id/edtOptionalMobile"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rect_bg_lightgrey"
                        android:hint="  Enter Optional Mobile No "
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="13sp"></EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/ciculrstd"
                        android:gravity="center|left"
                        android:padding="5dp"
                        android:text="Optional Add Item"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13sp"></TextView>

                    <EditText
                        android:id="@+id/edtRemarkItem"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rect_bg_lightgrey"
                        android:hint="  Enter Optional Item Remark"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="13sp"></EditText>


                    <LinearLayout
                        android:id="@+id/ll_kmRs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/spinner_adapter_shape"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <TextView
                                android:id="@+id/txtKilometer"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/ciculrstd"
                                android:gravity="center"
                                android:padding="2dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp"></TextView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".7dp"
                                android:background="@color/lightGrey"></View>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/ciculrstd"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="Kilometre"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp"></TextView>

                        </LinearLayout>

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary"></TextView>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <TextView
                                android:id="@+id/txtFare"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="2dp"

                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp"></TextView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".7dp"
                                android:background="@color/lightGrey"></View>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/ciculrstd"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="Fare"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp"></TextView>

                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_bookNow"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/rect_bg_lightgrey"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:fontFamily="@font/ciculrstd"
                        android:text="Book Now"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="normal"></Button>


                    <Button
                        android:id="@+id/btn_ConfirmBooking"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/rect_bg_lightgrey"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:fontFamily="@font/ciculrstd"
                        android:text="Confirm Booking"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:visibility="gone"></Button>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/driver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/slider"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/ic_sort_button_with_three_lines"
                        android:backgroundTint="@color/colorPrimaryDark"></ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/ciculrstd"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:text="Smart Rider24"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|end"
                        android:orientation="horizontal">

                        <!--<LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/rect_bg_lightgrey"
                            android:layout_marginRight="20dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_loupe"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:layout_gravity="center"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ciculrstd"
                            android:layout_marginLeft="1dp"
                            android:padding="5dp"
                            android:text="Find Loads"
                            android:textColor="@color/hintColor"
                            android:textSize="13sp"
                            android:gravity="center"></TextView>

                        </LinearLayout>-->


                        <ImageView
                            android:id="@+id/dNotice"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center|end"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/ic_notification"
                            android:backgroundTint="@color/colorPrimaryDark"></ImageView>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/lightGrey"></View>
                <RelativeLayout
                    android:layout_marginTop="120dp"
                    android:id="@+id/NotripsDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_caarr"
                        android:backgroundTint="@color/grey"></ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/img"
                        android:gravity="center"
                        android:text="No trips found"
                        android:textColor="@color/black"
                        android:textSize="15sp"></TextView>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
